<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_64a.png</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="88"/>
    <uniform name="lifetime" min="0.4" max="1.5"/>
	
    <constant name="position.y" value="0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="-0.3" max="0.3"/>
    <uniform name="velocity.y" min="1.0" max="1.5"/>
    <uniform name="velocity.z" min="-0.5" max="0.5"/>
    <uniform name="velocity.angle" min="-2.0" max="2.0"/>

    <uniform name="size" min="0.3" max="0.7"/>
	<constant name="size.growthRate" value="2"/>

    <uniform name="color.r" min="0" max="0.1"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
