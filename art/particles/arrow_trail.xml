<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/arrow_trail.png</texture>
    <blend mode="over"/>
	<start_full/>
    <constant name="emissionrate" value="9"/>
    <uniform name="lifetime" min="0.2" max="0.3"/>
	
    <constant name="position.y" value="0"/>

    <uniform name="angle" min="0" max="0"/>

    <uniform name="velocity.x" min="-0.1" max="0.1"/>
    <uniform name="velocity.y" min="-3" max="0"/>
    <uniform name="velocity.z" min="0" max="0"/>
    <uniform name="velocity.angle" min="0" max="0"/>

    <uniform name="size" min="2" max="1"/>
	<constant name="size.growthRate" value="1"/>

    <uniform name="color.r" min="1" max="1"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
